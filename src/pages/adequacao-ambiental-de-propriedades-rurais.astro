---
import ServiceLayout from "../Layouts/ServiceLayout.astro";
import Site from "../components/Site.json";

import GalleryImg1 from "/assets/adequacao/1.jpg";
import GalleryImg2 from "/assets/adequacao/2.jpg";
import GalleryImg3 from "/assets/adequacao/3.jpg";

import imgText1 from "/assets/adequacao/box1.jpg";
import imgText2 from "/assets/adequacao/box2.jpg";
import imgText3 from "/assets/adequacao/box3.jpg";

import AdequacaoRuralContent from "../content/AdequacaoRuralContent.astro";

const data = Site.items.find((item) => item.id === 5);

const imgGallery = [GalleryImg1, GalleryImg2, GalleryImg3];

const imgs = [imgText1, imgText2, imgText3];
---

<ServiceLayout
  title={data.title}
  desc={data.desc}
  bannerImg={data.bannerImg}
  color={data.color}
  {imgGallery}
>
  <AdequacaoRuralContent imgText={imgs} />
</ServiceLayout>
