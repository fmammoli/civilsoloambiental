---
import ServiceLayout from "../Layouts/ServiceLayout.astro";
import Site from "../components/Site.json";

import img1 from "../../public/assets/laudo/1.png";
import img2 from "../../public/assets/laudo/2.png";
import img3 from "../../public/assets/laudo/3.png";
import img4 from "../../public/assets/laudo/4.png";
import img5 from "../../public/assets/laudo/5.jpg";
import img6 from "../../public/assets/laudo/6.jpg";

import LaudoContent from "../content/LaudoContent.astro";

const data = Site.items.find((item) => item.id === 2);
const imgGallery = [img1, img2, img3, img4, img5, img6];
---

<ServiceLayout
  title={data.title}
  desc={data.desc}
  bannerImg={data.bannerImg}
  {imgGallery}
>
  <LaudoContent />
</ServiceLayout>
