---
import ServiceLayout from "../Layouts/ServiceLayout.astro";
import Site from "../components/Site.json";

import GalleryImg1 from "/assets/socioambiental/1.jpg";
import GalleryImg2 from "/assets/socioambiental/2.jpg";
import GalleryImg3 from "/assets/socioambiental/3.jpg";

import imgText1 from "/assets/socioambiental/box1.jpg";
import imgText2 from "/assets/socioambiental/box2.jpg";

import ProjetosSocioambientaisContent from "../content/ProjetosSocioambientaisContent.astro";

const data = Site.items.find((item) => item.id === 6);
const imgGallery = [GalleryImg1, GalleryImg2, GalleryImg3];

const imgs = [imgText1, imgText2];
---

<ServiceLayout
  title={data.title}
  desc={data.desc}
  bannerImg={data.bannerImg}
  color={data.color}
  {imgGallery}
>
  <ProjetosSocioambientaisContent imgText={imgs} />
</ServiceLayout>
