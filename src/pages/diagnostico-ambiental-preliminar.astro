---
import ServiceLayout from "../Layouts/ServiceLayout.astro";
import Site from "../components/Site.json";

import GalleryImg1 from "/assets/diagnostico/1.jpg";
import GalleryImg2 from "/assets/diagnostico/2.jpg";
import GalleryImg3 from "/assets/diagnostico/3.jpg";

import imgText1 from "/assets/diagnostico/box1.jpg";
import imgText2 from "/assets/diagnostico/box2.jpg";

import DiagnosticoAmbientalContent from "../content/DiagnosticoAmbientalContent.astro";

const data = Site.items.find((item) => item.id === 2);

const imgGallery = [GalleryImg1, GalleryImg2, GalleryImg3];

const imgs = [imgText1, imgText2];
---

<ServiceLayout
  title={data.title}
  desc={data.desc}
  bannerImg={data.bannerImg}
  color={data.color}
  {imgGallery}
>
  <DiagnosticoAmbientalContent imgText={imgs} />
</ServiceLayout>
