---
import MainLayout from '../Layouts/MainLayout.astro';
import AreasContaminadasContent from "../content/AreasContaminadas/AreasContaminadasContent.astro";
import ImgGallery from "../components/ImgGallery.astro";
const title = "Investigação de Áreas Contaminadas"

---
<MainLayout activeNav="Serviços">
    <main class="main">
        <div class="grid banner">
            <div class="grid__item-1 img__container">
                <img src="https://via.placeholder.com/1440x560" alt="" width="1440" height="560">
            </div>
            <div class="grid__item-2 title__container">
                <h1 class="title">{title}</h1>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                <a class="btn" href="">Veja mais</a>
            </div>
            
            
        </div>
        <AreasContaminadasContent />
        <div class="gallery__background">
        <ImgGallery></ImgGallery>
        </div>
    </main>
</MainLayout>

<style>
.main {
    margin-top: 1rem;
}
.grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
}

.grid__item-1 { 
    grid-area: 1 / 1 / 3 / 3; 
}

.img__container {
    
}
.img {
    
    height: auto;
}
.grid__item-2 { 
    grid-area: 1 / 2 / 3 / 3;
}
.title__container {
    width: 80%;
    max-width: 500px;
    align-self: center;
    color: white;
}
.title__container h1 {
    padding-block: 1rem;
    line-height: 1.4em;
}
.title__container p {
    padding-block: 1rem;
    line-height: 1.2rem;
}
.btn {
    display: inline-block;

    
    margin: 0 auto;
    padding: 1em 2em;

    text-align: center;

    border-radius: 6px;
    background-color: white;
    color: var(--card-color);
    text-decoration: none;
    border: 4px solid var(--card-color);

    font-size: 1rem;
}
.btn:hover,
.btn:focus {
  background-color: var(--card-color);
  color: white;
}
.gallery__background {
    width: 100%;
    background-color: var(--sixth-color);
    padding: 3rem;
}

</style>
