---
import ServiceLayout from "../Layouts/ServiceLayout.astro";
import Site from "../components/Site.json";

import img1 from "/assets/areasContaminadas/1.jpg";
import img2 from "/assets/areasContaminadas/2.jpg";
import img3 from "/assets/areasContaminadas/3.jpg";
import img4 from "/assets/areasContaminadas/4.jpg";
import img5 from "/assets/areasContaminadas/5.jpg";
import img6 from "/assets/areasContaminadas/6.jpg";

import imgText1 from "/assets/areasContaminadas/image1.jpg";
import imgText2 from "/assets/areasContaminadas/image2.jpeg";
import imgText3 from "/assets/areasContaminadas/image3.jpg";
import imgText4 from "/assets/areasContaminadas/image4.jpg";

import AreasContaminadasContent from "../content/AreasContaminadasContent.astro";

const data = Site.items.find((item) => item.id === 1);
const imgGallery = [img1, img2, img3, img4, img5, img6];

const imgs = [imgText1, imgText2, imgText3, imgText4];
console.log(imgs);
---

<ServiceLayout
  title={data.title}
  desc={data.desc}
  bannerImg={data.bannerImg}
  color={data.color}
  {imgGallery}
>
  <AreasContaminadasContent imgText={imgs} />
</ServiceLayout>
