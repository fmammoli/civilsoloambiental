---
import ServiceLayout from "../Layouts/ServiceLayout.astro";
import Site from "../components/Site.json";

import GalleryImg1 from "/assets/supressao/1.jpg";
import GalleryImg2 from "/assets/supressao/2.jpg";
import GalleryImg3 from "/assets/supressao/3.jpg";

import imgText1 from "/assets/supressao/box1.jpg";
import imgText2 from "/assets/supressao/box2.jpg";
import imgText3 from "/assets/supressao/box3.jpg";

import SupressaoContent from "../content/SupressaoContent.astro";

const data = Site.items.find((item) => item.id === 3);

const imgGallery = [GalleryImg1, GalleryImg2, GalleryImg3];

const imgs = [imgText1, imgText2, imgText3];
---

<ServiceLayout
  title={data.title}
  desc={data.desc}
  bannerImg={data.bannerImg}
  color={data.color}
  {imgGallery}
>
  <SupressaoContent imgText={imgs} />
</ServiceLayout>
