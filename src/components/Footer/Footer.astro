---
import FooterNav from "./FooterNav.astro";
import FooterContact from "./FooterContact.astro";
import FooterLogo from "./FooterLogo.astro";
import CivilsoloLogo from "./CivilsoloLogo.astro";
import SocialMediaContact from "./SocialMediaContact.astro";

import Site from "../Site.json";

const text = "";

const nav = {
  title: "Navegação",
  items: [
    {
      link: "/",
      title: "Home",
    },
    {
      link: "/empresa",
      title: "Empresa",
    },
    {
      link: "/contato",
      title: "Contato",
    },
  ],
};

const services = {
  title: "Serviços",
  items: [
    {
      id: 1,
      title: "Investigação de Áreas Contaminadas",
      link: Site.items[0].link,
      img: "https://via.placeholder.com/585x300",
      color: "--first-color",
    },
    {
      id: 2,
      title: "Diagnóstico Ambiental Preliminar",
      link: Site.items[1].link,
      img: "https://via.placeholder.com/585x300",
      color: "--second-color",
      reversed: true,
    },
    {
      id: 3,
      title: "Autorização para Supressão de Vegetação Nativa",
      link: Site.items[2].link,
      img: "https://via.placeholder.com/585x300",
      color: "--third-color",
    },
    {
      id: 4,
      title: "Compensação Ambiental e Plantio de Mudas Nativas",
      link: Site.items[3].link,
      img: "https://via.placeholder.com/585x300",
      color: "--fourth-color",
      reversed: true,
    },
    {
      id: 5,
      title: "Adequação Ambiental de Propriedades Rurais",
      link: Site.items[4].link,
      img: "https://via.placeholder.com/585x300",
      color: "--fifth-color",
    },
    {
      id: 6,
      title: "Projetos Socioambientais",
      link: Site.items[5].link,
      img: "https://via.placeholder.com/585x300",
      color: "--sixth-color",
      reversed: true,
    },
  ],
};
---

<div class="footer">
  <div class="container">
    <ul class="footer__grid">
      <li class="footer__item footer__item--one">
        <div class="logos__container">
          <FooterLogo />
          <SocialMediaContact />
        </div>
      </li>
      <li class="footer__item footer__item--two">
        <FooterNav title={nav.title} items={nav.items} />
      </li>
      <li class="footer__item footer__item--three">
        <FooterNav title={services.title} items={services.items} />
      </li>
      <li class="footer__item footer__item--four">
        <FooterContact />
      </li>
    </ul>
    <div class="footer__item wrapper">
      <CivilsoloLogo />
    </div>
  </div>
</div>

<style>
  .footer {
    max-width: 1080px;
    margin: 0 auto;
  }
  .logos__container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }
  ul {
    list-style: none;
    padding: 0;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    /* Dont know why commenting this solves the isso */
    /* grid-template-rows: repeat(4, 1fr); */
    grid-column-gap: 16px;
    grid-row-gap: 16px;
  }
  .footer__item {
    margin: 0 auto;
  }
  .footer__item--one {
    grid-area: 1 / 1 / 5 / 2;
  }
  .footer__item--two {
    grid-area: 1 / 2 / 5 / 3;
  }
  .footer__item--three {
    grid-area: 1 / 3 / 5 / 4;
  }
  .footer__item--four {
    grid-area: 1 / 4 / 5 / 5;
  }
  .wrapper {
    padding-top: 2rem;
  }
  .footer__grid {
    font-size: 15px;
  }
  @media (max-width: 800px) {
    .logos__container {
      align-items: center;
    }
    .footer__item {
      width: 100%;
    }
    .footer__item--one {
      grid-area: 1 / 1 / 5 / 3;
    }
    .footer__item--three {
      grid-area: 1 / 3 / 5 / 5;
    }
    .footer__item--four {
      grid-area: 5 / 1 / 5 / 3;
    }
    .footer__item--two {
      grid-area: 5 / 3 / 5 / 5;
    }
  }
  @media (max-width: 600px) {
    .footer__grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      /* Dont know why commenting this solves that */
      /* grid-template-rows: repeat(4, 1fr); */
      grid-column-gap: 16px;
      grid-row-gap: 16px;
    }

    .footer__item--one {
      grid-area: 1 / 1 / 2 / 5;
    }
    .footer__item--two {
      grid-area: 2 / 1 / 4 / 3;
    }
    .footer__item--three {
      grid-area: 2 / 3 / 4 / 5;
    }
    .footer__item--four {
      grid-area: 4 / 1 / 5 / 5;
    }
    .footer__logo--text {
      text-align: center;
    }
  }
  @media (max-width: 320px) {
    .footer__grid {
      display: block;
    }
  }
</style>
